#include<stdio.h>
int main()
{
    int a,b,c,d,i=0;
    printf("There are 7 ways to assign the players.\n");
    for(a=1;a<=4;a++)
    {
        for(b=1;b<=4;b++)
        {
            for(c=1;c<=4;c++)
            {
                for(d=1;d<=4;d++)

            if(a!=b&&a!=c&&a!=d&&b!=c&&b!=d&&c!=d&&a!=2&&c!=2&&c!=4&&d!=1)
            {
                i++;
                printf("Group %d:\n",i);
                printf("A VS %c\nB VS %c\nC VS %c\nD VS %c\n",'V'+a,'V'+b,'V'+c,'V'+d);
            }}
        }
    }
    return 0;
}
